<script src="/js/validation.js"></script>
<div class="login-container">
    <form class="login-form" action="/login" method="POST">
        <div class="input-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Enter your email" class="login-input" required>
        </div>
        <div class="input-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="Enter your password" class="login-input" required>
        </div>
        <button type="submit" class="login-btn">Log In</button>
        <p class="signup-link">Don't have an account yet? <a href="/register">Sign up</a></p>
    </form>
</div>
